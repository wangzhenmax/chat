page{
    background-color: #f5f5f5;
    height: 100%;
  }
.box{
    display: flex;
    flex-direction:column;
    height: 100%;
}
.center{
    flex-grow:1;
    flex-shrink:1;
    width: 100%;
    height: 100rpx;
}
.top{
    flex-shrink:0;
    flex-grow:0;
    width: 100%;
    height: 140rpx;
    background-color: #ff7e06;
    display: flex;
    flex-wrap: nowrap;
    /* z-index: 9999999; */
}
.bottom{
    width: 100%;
    height: 500rpx;
    background-color: #fff;
    transition: all .3s ;
    flex-shrink:0;
    flex-grow:0;
    /* position: fixed;
    bottom: 0rpx; */
}
.topBox{
    width: 100%;
    height: 140rpx;
}
.top_item{
    margin-top: 30rpx;
    width: 33%;
    justify-content:space-around;
    text-align: center;
}
.top_item text{
    color: #fff;
    font-size: 24rpx
}
.top_item image{
    width: 60rpx;
    height: 50rpx
}
.getPhone{
    color: red;
    margin-left: -260rpx;
    opacity: 0;
}
.mess_time{
    position: relative;
    width: 130rpx;
    height: 40rpx;
    background-color: #dfdfdf;
    color: #fdfdfd;
    text-align: center;
    line-height: 40rpx;
    border-radius: 20rpx;
    font-size: 18rpx;
    margin: 0 auto;
    border: 1px solid #f4f4f4;
    overflow: hidden;
}
.kefu{
    float: left;
    clear: both;
    margin-bottom:30rpx;
}
.mess_item .head{
    width: 80rpx;
    height: 80rpx;
    margin-left: 30rpx;
    display: inline-block;
    border-radius: 50%;
    vertical-align:top;
}
.mess{
    width: auto;
    max-width: 470rpx;
    height: auto;
    background-color: #fff;
    text-align: left;
    font-size: 28rpx;
    display: inline-block;
    line-height: 40rpx;
    border-radius: 10rpx;
    margin-left: 25rpx;
    padding: 20rpx 0rpx  20rpx 10rpx;
    white-space:normal;
    word-wrap:break-word; 
    word-break:break-all; 
    overflow: hidden;
}
.sanjiao{
    position: relative;     
    top:45rpx;
    float: left;
    margin-left:120rpx; 
    display: inline-block;
    box-sizing: border-box;
    width: 15rpx;
    height: 15rpx; 
    border-top:15rpx solid #f4f4f4; 
    border-right:15rpx solid #fff; 
    border-bottom:15rpx solid #f4f4f4; 
    clear: both;
}
.user_sanjiao{
    margin-right: -30rpx;
    margin-top: 20rpx;
    display: inline-block;
    box-sizing: border-box;
    width: 15rpx;
    height: 15rpx; 
    border-top:15rpx solid #f4f4f4; 
    border-bottom:15rpx solid #f4f4f4;
    border-left:15rpx solid #ff9e44 !important; 
    border-right:15rpx solid #f4f4f4 !important; 
    vertical-align:top;
}
.user_item{
    float: right;
    text-align: right;
    margin-right: 28rpx;
    clear: both;
    margin-top: 30rpx;
}
.user_mess{
    background-color: #ff9e44;
    color: #fff
}

.userinput{
    word-wrap:break-word;
    width: 500rpx;
    height: 60rpx;
    border: 3rpx solid #d2d2d2;
    border-radius: 30rpx;
    display: inline-block;
    margin-left: 30rpx;
    font-size: 28rpx;
    color: #000;
    padding-left:10px; 
    vertical-align:top;
    margin-top: 20rpx;
}
.chat_em,.chat_open{
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}
.fileBox{
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 0rpx;
    background-color: #fff;
    border: 1rpx solid #d2d2d2;
    transition: all .3s 
}
.file_time{
    text-align: center;
    display: inline-block;
    margin-left: 80rpx;
    margin-right: 20rpx;
    margin-top: 45rpx;
}
.file_time image{
    width: 70rpx;
    height: 64rpx;
}
.file_time text{
    color: #999;
    font-size: 24rpx;
    display: block;
    margin-top: 20rpx;
}

.emlist {
    display: inline-block;
    margin-left: 20rpx;
    margin-top: 10rpx;
    font-size: 46rpx
}
.userImg{
    width: 340rpx;
    max-width: 340rpx;
    height: auto;
}
.send{
    position: relative;
    bottom: 50rpx;
    left: 620rpx;
    display: block;
    width: 100rpx;
    height: 50rpx;
    border: 2rpx solid #ff7e06;
    color: #ff7e06;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    border-radius: 30rpx;
}

.user_file{
    width: 400rpx;
    height: 160rpx;
    background-color: #fff;
    display: inline-block;
    color: #000;
    border: 1rpx solid #ff7e06;
    font-size: 28rpx;
    border-radius: 10rpx;
    padding: 20rpx
}
.user_file .file_title{
    float: left;
    display: inline-block;
    vertical-align: top;
    width: 260rpx;
    height: 80rpx;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient: vertical;
}
.user_file .file_size{
    display: block;
    float: left;
    clear: both;
    width: 100%;
    height: 30rpx;
    text-align: left;
    border-top: 1rpx solid #000;
    color: #999;
    font-size: 28rpx;
    margin-top: 20rpx;
}
.file_size text{
    margin-left: 105rpx;
    text-align: right;
    float: right;
    clear: both
}
.user_file_image{
    float: right;
    width: 100rpx;
    height: 100rpx;
    display: inline-block;
}
.addBox{
    position: fixed;
    top: 0rpx;
    margin-top: 140rpx;
}
.kefu_notxt{
    margin-top: 50rpx;
}
.kefu_ntxt_mess{
    margin-right: 20rpx;
}
.user_noSend{
    color: red;
    display: inline-block;
    font-size:50rpx;
    font-weight:700;
    margin-right:5px;
}

  
